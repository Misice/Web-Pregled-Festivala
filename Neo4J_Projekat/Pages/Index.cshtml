@page
@model IndexModel
@{
    ViewData["Title"] = "Pocetna";
}
<div class="container">

    <div class="row justify-content-center">
        <h2>Svi kontinenti:</h2>
        <br />
        <br />  
        <br />
    </div>

    <div class="row">
        @if (Model.Kontinenti != null)
        {
            int broj = 0;
            @foreach (var kontinent in Model.Kontinenti)
            {

                @if (broj == 3)
                {

                @:</div><div class="row">
                    broj = 0;

                }

                <div class="col">
                    <div class="card">

                        <div class="card-img-top">
                            <img style="" src="@kontinent.slika" />
                        </div>
                        <div class="card-body">
                            <div class="col" style="text-align:center;">
                                <b> @kontinent.ime </b>
                            </div>
                            <form method="post" class="form-inline float-right">
                                <input name="ime" value="@kontinent.ime" hidden="hidden" />
                                <button asp-page-handler="Kontinent" class="btn-info btn">Detaljnije</button>
                            </form>
                        </div>
                        <a class="card-footer alert-success text-center">
                            <b> Kliknuti na detaljnije za prikaz svih drzava u kontinentu</b>
                        </a>
                    </div>
                </div>
                broj++;
            }
        }


    </div>

</div>