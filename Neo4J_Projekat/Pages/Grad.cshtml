@page
@model Neo4J_Projekat.Pages.GradModel
@{
    ViewData["Title"] = "Grad";
}
<div class="container">

    <div class="row">
        <div class="col">
            <b> Ime Grada:</b>
            <h1> @Model.grad.ime</h1>
        </div>      
    </div>


    <div class="row justify-content-center">
        <b>Festivali u ovom gradu su:</b>
    </div>

    <div class="row">
        @if (Model.festivali != null)
        {
            int broj = 0;
            @foreach (var festival in Model.festivali)
            {


                @if (broj == 3)
                {

                @:</div><div class="row">
                    broj = 0;

                }

                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <div class="col" style="text-align:center;">
                                <b> @festival.naziv</b>
                            </div>
                            <form method="post" class="form-inline float-right">
                                <input name="naziv" value="@festival.naziv" hidden="hidden" />
                                <button asp-page-handler="Festival" class="btn-info btn">Detaljnije</button>
                            </form>
                        </div>
                        <a class="card-footer alert-success text-center">
                            <b> Kliknuti ovde za vise informacija</b>
                        </a>
                    </div>
                </div>

                broj++;
            }
        }


    </div>

</div>