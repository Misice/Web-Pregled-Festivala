@page
@model Neo4J_Projekat.Pages.ZanrModel
@{
    ViewData["Title"] = "Zanr";
}
<div class="container">

    <div class="row">
        <div class="col ">
            <b>Naziv Zanra:</b>
            <p> @Model.zanr.naziv</p>
        </div>
        <div class="col">
            <b> Godina Nastanka:</b>
            <p> @Model.zanr.godinaNastanka</p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <b> Opis:</b>
            <p> @Model.zanr.opis</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <b>Bendovi sa ovim zanrom su:</b>
    </div>

    <div class="row">
        @if (Model.Bendovi != null)
        {
            int broj = 0;
            @foreach (var bend in Model.Bendovi)
            {


                @if (broj == 3)
                {

                @:</div><div class="row">
                    broj = 0;

                }

                <div class="col">
                    <div class="card">

                        <div class="card-img-top">
                            <img style="" src="@bend.slika" />
                        </div>
                        <div class="card-body">
                            <div class="col" style="text-align:center;">
                                <b> @bend.naziv</b>
                            </div>
                            <form method="post" class="form-inline float-right">
                                <input name="naziv" value="@bend.naziv" hidden="hidden" />
                                <button asp-page-handler="Bend" class="btn-info btn">Detaljnije</button>
                            </form>
                        </div>
                        <a class="card-footer alert-success text-center">
                            <b> Kliknuti na detaljnije za vise informacija</b>
                        </a>
                    </div>
                </div>

                broj++;
            }
        }


    </div>

</div>