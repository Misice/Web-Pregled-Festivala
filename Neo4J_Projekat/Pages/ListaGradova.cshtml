@page
@model Neo4J_Projekat.Pages.ListaGradovaModel
@{
    ViewData["Title"] = "Gradovi";
}

<div class="container">
    <div class="row justify-content-center ">
        <h2>Svi Gradovi:</h2>
    </div>


    <div class="row">
        <div class="col">
            <form method="post" class="form-inline float-right">
                <input class="form-control" name="ime" style="margin-right:5vh;" placeholder="Unesite Naziv Grada...">

                <button asp-page-handler="PronadjiJedan" class="btn btn-info ">Prikazi</button>

                <button asp-page-handler="VratiSve" class="btn btn-secondary" style="margin-left:2vh;">Vrati Svi Gradovi</button>
            </form>
        </div>
    </div>


    <div class="row">
        @if (Model.Gradovi != null)
        {
            int broj = 0;
            @foreach (var grad in Model.Gradovi)
            {
                @if (broj == 3)
                {

                @:</div><div class="row">
                    broj = 0;

                }

                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <div class="col" style="text-align:center;">
                                <b> @grad.ime </b>
                            </div>
                            <form method="post" class="form-inline float-right">
                                <input name="ime" value="@grad.ime" hidden="hidden" />
                                <button asp-page-handler="Grad" class="btn-info btn">Detaljnije</button>
                            </form>
                        </div>
                        <a class="card-footer alert-success text-center">
                            <b> Kliknuti na detaljnije za prikaz svih festivala u gradu</b>
                        </a>
                    </div>
                </div>
                broj++;
            }
        }
        else
        {
            <div class="col text-center" style="margin-top:20vh;">
                <h1>NE POSTOJI POTRAZEN GRAD</h1>
            </div>

        }


    </div>

</div>